{
  "name": "teddytags",
  "version": "0.3.8",
  "description": "The superfast way to custom elements.",
  "browser": "./lib/teddytags.min.js",
  "jsdelivr": "./lib/teddytags.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/obnoxiousnerd/teddytags.git"
  },
  "main": "./lib/teddytags.js",
  "files": [
    "lib/**/*"
  ],
  "prettier": "./.prettierrc.json",
  "publishConfig": {
    "access": "public"
  },
  "types": "./typings/**/*.d.ts",
  "prettyquick": {
    "*.{js,ts,yml,d.ts,md}": [
      "prettier ./.prettierrc.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run release && pretty-quick --staged"
    }
  },
  "scripts": {
    "tsc:src": "tsc -p ./src",
    "tsc:test": "tsc -p ./test",
    "tsc": "npm run tsc:src && npm run tsc:test",
    "cleanup:test": "rimraf test/**/*.js",
    "release": "standard-version",
    "prepare": "npm run tsc:src && npm run minify",
    "minify:teddy": "terser lib/teddytags.js --comments -o lib/teddytags.min.js --source-map \"content='lib/teddytags.js.map', url='teddytags.min.js.map'\"",
    "minify:vdom": "terser lib/vdom.js --comments -o lib/vdom.min.js --source-map \"content='lib/vdom.js.map', url='vdom.min.js.map'\"",
    "minify": "npm run minify:teddy && npm run minify:vdom",
    "test": "npm run tsc && karma start karma.conf.ts && npm run cleanup:test"
  },
  "keywords": [
    "custom elements",
    "teddytags",
    "obnoxoxiousnerd"
  ],
  "author": "Pranav Karawale",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@types/jasmine": "^3.5.4",
    "@types/node": "^13.7.0",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "husky": "^4.2.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.5.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-coveralls": "^2.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^3.1.1",
    "karma-remap-coverage": "^0.1.5",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^4.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "standard-version": "^7.1.0",
    "terser": "^4.6.3",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6"
  }
}
