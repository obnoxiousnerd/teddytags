{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2017", "dom"],
    "typeRoots": [
      "./node_modules/@types/node",
      "./node_modules/@types/jasmine",
      "./node_modules/@types/webpack"
    ]
  }
}
